@model IEnumerable<kmcmvc.Areas.Admin.Data.propertytype>

@{
    ViewBag.Title = "Property Type";
}

    <div class="pcoded-inner-content">
        <!-- Main-body start -->
        <div class="main-body">
            <div class="page-wrapper">
                <!-- Page-body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-header table-card-header">
                                    <h5>MUCT KMC Property Type List</h5>

                                </div>
                                <div class="card-block">
                                    <span>To add new record @Html.ActionLink("Click on this link", "Create")</span>
                                    <div class="dt-responsive table-responsive">
                                        <table id="basic-btn" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>Property Type</th>
                                                    <th>Property Code</th>
                                                    <th>Size</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {

                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.propertyTypeName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.PropertyCode)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.SizeIn)
                                                    </td>
                                                    <td>
                                                        @Html.ActionLink("Edit", "Edit", new { id = item.propertyTypeID }) |
                                                        @Html.ActionLink("Details", "Details", new { id = item.propertyTypeID }) |
                                                        @Html.ActionLink("Delete", "Delete", new { id = item.propertyTypeID })
                                                    </td>
                                                </tr>



                                                }
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th>Property Type</th>
                                                    <th>Property Code</th>
                                                    <th>Size</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

