@model IEnumerable<kmcmvc.Areas.Admin.Data.modify_invoice>

@{
    ViewBag.Title = "Modification Invoice";
}

    <div class="pcoded-inner-content">
        <!-- Main-body start -->
        <div class="main-body">
            <div class="page-wrapper">
                <!-- Page-body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-header table-card-header">
                                    <h5>MUCT KMC Modification Invoice List</h5>

                                </div>
                                <div class="card-block">
                                    <span>To add new record @Html.ActionLink("Click on this link", "Create")</span>
                                    <div class="dt-responsive table-responsive">
                                        <table id="basic-btn" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>Inword No #</th>
                                                    <th>Consumer No #</th>
                                                    <th>Modification Status</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {

                                                    <tr>
                                                        <td>@Html.DisplayFor(modelItem => item.inword)</td>
                                                        <td>@Html.DisplayFor(modelItem => item.consumer_no)</td>
                                                        <td>@Html.DisplayFor(modelItem => item.modification_status)</td>
                                                        <td>
                                                            @Html.ActionLink("Edit", "Edit", new { id = item.sno }) |
                                                            @Html.ActionLink("Details", "Details", new { id = item.sno }) |
                                                            @Html.ActionLink("Delete", "Delete", new { id = item.sno })
                                                        </td>
                                                    </tr>



                                                }
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th>Inword No #</th>
                                                    <th>Consumer No #</th>
                                                    <th>Modification Status</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

