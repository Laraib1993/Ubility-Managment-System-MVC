@model IEnumerable<kmcmvc.Areas.Admin.Data.zone>

@{
    ViewBag.Title = "Zone";
}

<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page-body start -->
            <div class="page-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header table-card-header">
                                <h5>MUCT KMC Zone List</h5>

                            </div>
                            <div class="card-block">
                                <span>To add new zone @Html.ActionLink("Click on this link", "Create")</span>
                                <div class="dt-responsive table-responsive">
                                    <table id="basic-btn" class="table table-striped table-bordered nowrap">
                                        <thead>
                                            <tr>
                                                <th>Zone</th>
                                                <th>Status</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {

                                                <tr>
                                                    <td>@Html.DisplayFor(modelItem => item.ZoneName)</td>
                                                    <td> @Html.DisplayFor(model => item.Status)</td>
                                                    <td>
                                                        @Html.ActionLink("Edit", "Edit", new { id = item.ZoneID }) |
                                                        @Html.ActionLink("Details", "Details", new { id = item.ZoneID }) |
                                                        @Html.ActionLink("Delete", "Delete", new { id = item.ZoneID })
                                                    </td>
                                                </tr>



                                            }
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>Zone</th>
                                                <th>Status</th>
                                                <th>Actions</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





